# Hedera Network Configuration
# Choose between 'mainnet' or 'testnet'
HEDERA_NETWORK=testnet

# Your Hedera account ID and private key
# IMPORTANT: Never commit your actual private key to source control!
HEDERA_ACCOUNT_ID="0.0.YOUR_ACCOUNT_ID"
HEDERA_PRIVATE_KEY="YOUR_PRIVATE_KEY"

# IPFS configuration using Pinata
# Get your API keys at https://pinata.cloud/
PINATA_API_KEY=YOUR_PINATA_API_KEY
PINATA_SECRET_KEY=YOUR_PINATA_SECRET_KEY

# Server configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# API settings
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Logging settings
LOG_LEVEL=info 